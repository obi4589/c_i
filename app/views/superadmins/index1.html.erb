<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>All Users</title>
<%= stylesheet_link_tag    "index_sp.css", media: "all", "data-turbolinks-track" => true %>
<%= javascript_include_tag "application", "data-turbolinks-track" => true %>
<%= csrf_meta_tags %>
<%= render 'layouts/shim' %>

</head>

<body>

<!-- navigation bar section -->
<div class="menu1">
  <div class="page_width1">
    <% if signed_in? %>
      <% if is_charity?%>
        <%= link_to image_tag("Nav-Logo.png", alt: "Home", id: "nav_logo"), home_charity_path(current_user)%>
      <% elsif is_superadmin?%>
        <%= link_to image_tag("Nav-Logo.png", alt: "Home", id: "nav_logo"), '#'%>
      <% else%>
        <%= link_to image_tag("Nav-Logo.png", alt: "Home", id: "nav_logo"), '#'%>
      <%end%>
    <%else%>
      <%= link_to image_tag("Nav-Logo.png", alt: "Home", id: "nav_logo"), '#'%>
    <%end%>

    <a ref="#" id="nav_button">O</a>

    <% if signed_in? %>
      <ul id="pages">
        <%= link_to "<li class='page_name'>Profile</li>".html_safe, current_user %>
        <%= link_to "<li class='page_name'>Activity</li>".html_safe, '#' %>
      </ul>
    <% else %>
      <ul id="pages">
        <a href="#"><li class="page_name">Profile</li></a>
        <a href="#"><li class="page_name">Activity</li></a>
      </ul>
    <% end %>

    <form id="search">
      <input name="search" type="text" value="Search" class="search-input" onfocus="if(this.value == 'Search')  {this.value=''}" onblur="if(this.value == ''){this.value ='Search'}"/>
    </form>
    <% flash.each do |name, msg| -%>
          <%= content_tag :div, msg, class: name %>
      <% end -%>

      <div id="nav_button_div">
          <ul>
            <% if signed_in? %>
              <% if is_charity? %>
                <%= link_to "<li>Settings</li>".html_safe, edit_charity_path(current_user) %>
                <%= link_to "<li>New Event</li>".html_safe, new_event_path %>
              <% elsif is_superadmin? %>
                <%= link_to "<li>Users</li>".html_safe, index1_superadmin_path(current_user) %>
              <% else %>
                <%= link_to "<li>Settings</li>".html_safe, edit_philanthropist_path(current_user) %>
              <% end %>
              <%= link_to "<li id='s-o'>Sign Out</li>".html_safe, signout_path, method: "delete" %>
            <% else %>
                  <a href="#"><li>Settings</li></a>
                  <a href="#"><li id="s-o">Sign Out</li></a>
                <% end %>
            </ul>
        </div>
  </div>
</div>
<!-- end of navigation bar -->






<div class="menu2"> 



<!-- beginning of PAGE CONTENT section -->
  <div id="page_width2">
    <div class="page">
      <div id="title">
        Users (<%= @users.count - @superadmins.count %>) <br/>
        Events (<%= @events.count%>)
      </div>
            <div id="body1">
              <ul>
                  <li id="underline">
                    <%= link_to "Philanthropist", index1_superadmin_path(current_user) %>
                  </li>
                  <li>
                    <%= link_to "Charity", index2_superadmin_path(current_user) %>
                  </li>
                </ul>
      </div>
    </div>
  </div>

    
<!-- end of PAGE CONTENT section -->
  
    <div id="page_width3">
    
    


    <!-- BEGINNING OF USER SECTION -->
    
    <div id="user_section">
      <div class="user_header">
        <ul>
          <li><a href="#">Philanthropists: <%=@philanthropists.count%></a></li> 
        </ul>
      </div>
      <div class="user_update">
        <ul>
          <% @users.each do |user| %>
          <% if user.type == "Philanthropist"%>
          <li>
            <a href="#">
            <img src="" width="63" height="63" class="user_pic"/> 
            </a>
            <div id="user_text">
             <%= link_to "<b>#{user.name}</b>".html_safe, user %> <br />
             <%= link_to "<b id='user_locatin'>#{user.zip_code.to_region}</b>".html_safe, '#' %><br />
            </div>
            <form class="user_button_form">
              <% if is_superadmin? && !current_user?(user) %>
              <%= link_to "Delete", user, class: "delete_user_button", method: :delete, data: {confirm: "Are you sure?"} %>
              <input type="submit" class="active_user_button" value="Active">
              <%end%>
            </form>
          </li>
          <%end %>
          <%end %>
        </ul>   
      </div>
    </div>
    <!-- END OF USER SECTION -->
    
    
  </div>  




</div>




</body>
</html>
