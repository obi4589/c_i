<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>Me</title>
<%= stylesheet_link_tag    "activity.css", media: "all", "data-turbolinks-track" => true %>
<%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
    <%= render 'layouts/shim' %>

</head>

<body>

<!-- navigation bar section -->
<div class="menu1">
  <div class="page_width1">
    <% if signed_in? %>
        <% if is_charity?%>
            <%= link_to image_tag("Nav-Logo.png", alt: "Home", id: "nav_logo"), home_charity_path(current_user)%>
        <% elsif is_superadmin?%>
            <%= link_to image_tag("Nav-Logo.png", alt: "Home", id: "nav_logo"), '#'%>
        <% else%>
            <%= link_to image_tag("Nav-Logo.png", alt: "Home", id: "nav_logo"), home_philanthropist_path(current_user)%>
        <%end%>
    <%else%>
        <%= link_to image_tag("Nav-Logo.png", alt: "Home", id: "nav_logo"), '#'%>
    <%end%>

    <a ref="#" id="nav_button">O</a>

    <% if signed_in? %>
      <ul id="pages">
        <%= link_to "<li class='page_name'>Profile</li>".html_safe, current_user %>
        <%= link_to "<li class='page_name'>Activity</li>".html_safe, activities_path %>
      </ul>
    <% else %>
      <ul id="pages">
        <a href="#"><li class="page_name">Profile</li></a>
        <a href="#"><li class="page_name">Activity</li></a>
      </ul>
    <% end %>

    <%= form_for(events_path, method: "get", id: "search" , url: events_url) do  %>
      <%= text_field_tag :search, params[:search], placeholder: 'Search', class: "search-input"%>
    <% end %>
    <% flash.each do |name, msg| -%>
          <%= content_tag :div, msg, class: name %>
      <% end -%>

      <div id="nav_button_div">
          <ul>
            <% if signed_in? %>
              <% if is_charity? %>
                <%= link_to "<li>Settings</li>".html_safe, edit_charity_path(current_user) %>
                <%= link_to "<li>New Event</li>".html_safe, new_event_path %>
              <% elsif is_superadmin? %>
                <%= link_to "<li>Users</li>".html_safe, index1_superadmin_path(current_user) %>
              <% else %>
                <%= link_to "<li>Settings</li>".html_safe, edit_philanthropist_path(current_user) %>
              <% end %>
              <%= link_to "<li id='s-o'>Sign Out</li>".html_safe, signout_path, method: "delete" %>
            <% else %>
                  <a href="#"><li>Settings</li></a>
                  <a href="#"><li id="s-o">Sign Out</li></a>
                <% end %>
            </ul>
        </div>
  </div>
</div>
<!-- end of navigation bar -->





<div class="menu2"> 


<!-- beginning of under navbar section --->
	<div id="under_navbar_section">
		<!-- beginning of UPDATE FEED section -->
		<div id="update_feed_section">
			<div class="feed_header">
				<form>
					<input name="update" type="text" value="What&#8217s up..." class="update" onfocus="if(this.value == 'What&#8217s up...') 	{this.value=''}" onblur=			
					"if(this.value == ''){this.value ='What&#8217s up...'}"/>
					<input type="submit" class="update_type_button" value="All Activity">
				</form> 
			</div>
			<div class="activity_header">
				<ul>
					<li><a href="#">Me</a></li> 
				</ul>
			</div>
			<div class="feed_update">
				<ul>
					<% if @activities.any? %>
						<% @activities.each do |activity| %>	
						<li>
							<a href="#">
							<img src="" width="63" height="63" class="friend_pic"/> 
							</a>
							<div id="feed_text">
								<%= link_to activity.owner.name, activity.owner if activity.owner %> <%= render_activity(activity) %>
								<%= time_ago_in_words(activity.created_at, true) %> ago
							</div>
						</li>				
	               		<% end %>
					<% else %>
						<li id="no_activity_holder">
		                No Activity
		                </li>
	                <% end %>
					
				</ul>		
			</div>
		</div>
		<!-- end of UPDATE FEED section --> 
	
		
		
		
		
		<!-- beginning of CONTROL PANEL  section -->
		<div id="control_panel_section">
			<div>
				<%= link_to "Activity", activities_path, class: "control_panel_link" %>
				<%= link_to "Me", me_activities_path, class: "control_panel_link", id: "chosen"%>
			</div>
		</div>
		<!-- end of CONTROL PANEL section -->	
		
		
		
		
		
		
		<div id="people_know_section">
			<div class="people_know_header">
				<ul>
					<li><%= link_to "People to follow", suggestions_activities_path  %></li>
				</ul>
			</div>
			<div class="people_know_update">
				<div class="user_update">
				<ul>
					<% if @recommended_users.any? %>
					<% @recommended_users.each do |user| %>
					<li>
						<a href="#">
						<img src="" width="63" height="63" class="user_pic"/> 
						</a>
						<% if user.type == 'Charity'%>
                        	<span id="id"></span>
                    	<% end %>
						<div id="user_text">
						<%= link_to "<b>#{user.name}</b>".html_safe, user %> <br/>
                        <%= link_to "<b id='user_location'>#{user.zip_code.to_region}</b>".html_safe, '#' %><br/>
						</div>
						

						<% if is_philanthropist? || is_charity? %>
		                    <%unless current_user?(user)%>
		                        <div id="follow_unfollow_form">
		                            <% if current_user.following?(user)%>
		                                <%= render partial: 'shared/unfollow_2', locals: {user: user}  %>
		                            <% else %>
		                                <%= render partial: 'shared/follow_2', locals: {user: user} %>
		                            <% end %>
		                        </div>
		                    <%end%>
                   		<%end%>

					</li>
					<% end %>
					<% end %>
				</ul>		
			</div>		
			</div>
		</div>
		<!-- end of PEOPLE YOU MAY KNOW section -->	

		
		
		
		
	</div>
			
			
	


</div>
</body>
</html>