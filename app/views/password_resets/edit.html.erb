<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>New Password</title>
	<%= stylesheet_link_tag    "reset.css", media: "all", "data-turbolinks-track" => true %>
  	<%= csrf_meta_tags %>
 	<%= render 'layouts/shim' %>
</head>

<body>

<!-- navigation bar section -->
<%= render 'shared/nav_bar_signed_out' %>
<!-- end of navigation bar -->






<div class="menu2"> 



<!-- beginning of PAGE CONTENT section -->
	<div id="page_width2">
		<div class="page">
			<div id="title">
				New Password
			</div>
            <div id="body1">
            	
            	<% flash.each do |name, msg| -%>
      			  <%= content_tag :div, msg, class: name %>
    			    <% end -%>
            	
            	<%= render 'shared/error_messages_reset' %>

            	<%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>

      				<%= f.label :password %><br />
      				<%= f.password_field :password, class: "form-input" %><br /><br />

      				<%= f.label :password_confirmation, "Confirm Password" %><br />
      				<%= f.password_field :password_confirmation, class: "form-input" %><br /><br /><br />

      			  <%= f.submit "Update", class: "reset-button" %>
   				    <% end %>
              
            </div>
		</div>
	</div>

		
<!-- end of PAGE CONTENT section -->



<!-- beginning of FOOTER section -->

	<div id="page_width3">
		<div class="footer">
			<ul>
            	<li><%= link_to "About", about_path %></li>
            	<li><%= link_to "Terms", terms_path %></li>
            	<li><%= link_to "Privacy", privacy_path %></li>
            	<li><%= link_to "Help", help_path %></li>
            </ul>
		</div>				
	</div>

<!-- end of FOOTER section -->

</div>


</body>
</html>